{
  "name": "Focus-Anchor",
  "description": "Re-open any page exactly where you left off.",
  "version": "0.9.0",
  "manifest_version": 3,
  "permissions": ["tabs", "storage", "activeTab"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}